<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/navigation"
	app:startDestination="@id/usersFragment">

	<fragment
		android:id="@+id/usersFragment"
		android:name="com.fran.users.feature.users.fragment.UsersFragment"
		android:label="Users"
		tools:layout="@layout/fragment_users" >

		<action
			android:id="@+id/action_usersFragment_to_userFragment"
			app:destination="@id/userDetailFragment" />
		<action
			android:id="@+id/action_usersFragment_to_errorFragment"
			app:destination="@id/errorFragment" />
	</fragment>
	<fragment
		android:id="@+id/userDetailFragment"
		android:name="com.fran.users.feature.userdetail.fragment.UserDetailFragment"
		android:label="User Detail"
		tools:layout="@layout/fragment_user_detail" />
	<fragment
		android:id="@+id/errorFragment"
		android:name="com.fran.users.feature.error.ErrorFragment"
		android:label="ErrorFragment"
		tools:layout="@layout/fragment_error" />
</navigation>